# TextMate
alias e='mate .'

#directory stuff
alias 1="cd .."
alias 2="cd ../.."
alias 3="cd ../../.."
alias 0="cd -"

alias tr='tree -A -C'

# GIT
alias g='git'
alias gst='git status'
alias gco='git checkout'
alias gb='git branch --color'
alias gba='git branch -a --color'
alias gc='git commit -v'
alias gca='git commit -a -v'
alias gpl='git pull'
alias gpu='git push'
alias gup='git up'
alias gx='gitx'
alias gr='git log --oneline --graph'
alias ggr='git log --graph'
alias grr='git log --graph --oneline --all --decorate'
alias ggrr='git log --graph --all --decorate'
alias gnb='new_local_branch'

# shell
alias lsl='ls -l'
alias lsa="ls -a"
alias lsla="ls -la"
alias o='open .'

# Testing
alias autocuke='AUTOFEATURE=true autospec'

# rails
alias bx='bundle exec'
alias bxr='bx rake'
alias rdbm='bxr db:migrate'
alias rdbp='bxr db:test:prepare'

# ssh
alias sshhost="mate ~/bin/dotfiles/ssh/config"

# radar services
alias rs-db="sudo /usr/local/mysql/support-files/mysql.server start"
alias rs-db-stop="sudo /usr/local/mysql/support-files/mysql.server stop"
